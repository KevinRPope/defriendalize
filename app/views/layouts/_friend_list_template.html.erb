<% title "Your friend change list" -%>
<ul id="change_list">
	<li class="share_link">
		<%= link_to 'Share this on Facebook!', "http://www.facebook.com/dialog/feed?app_id="+@app_id+"&link=http://www.defriendalize.com/&picture=http://www.defriendalize.com/images/flash-check.png&name=Defriendalize.com&caption=Track%20Your%20Friend%20List&description=Keep%20track%20of%20who%20defriends%20you%20and%20who%20has%20canceled%20their%20account.%20%20I'm%20watching%20you,%20grandma!&redirect_uri=http://www.defriendalize.com/" -%>
	</li>
<% if connections.empty? -%>
	<% if queued > 0 -%>
		<li id="updated">
			<div class="spinner">
				<span class="spinner"></span>
				Checking for friend updates...
			</div>
			<div class="clear"></div>		
		</li>
	<% else -%>
		<li class="profile_info">No changes in your list of friends.  Yet.</li>
		<% if timing -%>
			<li class="profile_info"><%= link_to 'Re-check Connections', check_my_connections_path -%></li>
		<% end -%>
	<% end -%>
<% else%>
	<li class="profile_info">
		Your friend list activity for the last 30 days:
	</li>
	<% if queued > 0 -%>
	<li id="updated">
		<div class="spinner">
			<span class="spinner"></span>
			Checking for friend updates...
		</div>
		<div class="clear"></div>		
	</li>
	<% end -%>
	<% if queued == 0 && timing -%>
		<li class="profile_info"><%= link_to 'Re-check Connections', check_my_connections_path -%></li>
	<% end -%>
		
	<% connections.each do |connection| %>
	<li>
	  <% if connection.last_action == 'Defriended'%>
		<div class="error_item">
		<span class="error_item"></span>
	  <% elsif connection.last_action == 'Canceled Account or Changed Privacy Settings'-%>
		<div class="warning_item">
		<span class="warning_item"></span>
	  <% else %>
		<div class="notice_item">
		<span class="notice_item"></span>
	  <% end %>
	  		<%= link_to connection.friend_name, "http://www.facebook.com/profile.php?id=" + connection.friend_facebook_id, :target => "_blank" -%>:<br />
			<%= connection.last_action.capitalize %>
		</div>
		<div class="clear"></div>
	</li>

	  <% end -%>
	</ul>
<% end -%>
