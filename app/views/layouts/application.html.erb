<!DOCTYPE html>
<html>
<head>
  <title><%= yield :title -%></title>
<link rel="shortcut icon" href="/images/favicon.ico" >
	<%= javascript_include_tag 'jquery-1.5.min.js', :cache => true %>
	
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tag %>
	<%= render :partial => "/layouts/google_analytics" -%>

</head>
<body>
	<%= raw(display_flash_messages) %>
	
	<div class="main-holder">
		<div class="logo">
			<%= link_to 'Defriendalize', root_path -%>
		</div>
		<div class="top-button">
			<%= link_to 'FAQ', faq_path -%>
		</div>
		
		<% if session[:user_id] %>
			<div class="top-button">
				<%= link_to 'My Profile', user_path_path -%>
			</div>
		<% end %>
		<%= render :partial => 'layouts/sign_in_area', :locals => { :user => @user} -%>
		<div class="clear"></div>
		
		<div class="main-content">
		
			<h1><%= yield :title -%></h1>
			
			<%= render :partial => 'layouts/addthis' -%>
			
			<div class="clear"></div>
			
			<%= yield %>
	
			<%= render :partial => 'layouts/rhs_ads' -%>
	
			<div class="clear"></div>

		</div>
	  
	  	<div class="footer clearfix">
			<ul>
				<li class="footer-tag">
					<%= link_to 'Privacy Policy', privacy_policy_path -%>
				</li>
				<li class="footer-tag">
					<%= link_to 'About Us', about_us_path -%>
				</li>
				<li class="footer-tag">
					<%= link_to 'Contact Us', contact_us_path -%>
				</li>
			</ul>
		</div>
	</div>
	<script src="http://static.getclicky.com/js" type="text/javascript"></script>
	<script type="text/javascript">try{ clicky.init(66397146); }catch(err){}</script>
	<noscript><p><img alt="Clicky" width="1" height="1" src="http://in.getclicky.com/66397146ns.gif" /></p></noscript>
</body>
</html>

